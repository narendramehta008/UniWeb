                            </StackPanel>
                        </ListViewItem>-->

                    </ListView>
                </StackPanel>
            </Grid>

            <Grid x:Name="GridMain" Grid.Column="1" Margin="10,5"     >
                <UserControl Content="{Binding CurrentTab.Value}" />
            </Grid>
