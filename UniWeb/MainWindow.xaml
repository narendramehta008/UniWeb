                                <materialDesign:PackIcon Kind="Web" Foreground="SteelBlue"  Height="40" Width="40"/>
                                <TextBlock FontWeight="ExtraBold" Text="{DynamicResource LangAllWeb}" VerticalAlignment="Center" Margin="20 0"/>
                            </StackPanel>
                        </ListViewItem>

