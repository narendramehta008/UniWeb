<UserControl x:Class="UniWeb.View.AllWeb.EmbeddedBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UniWeb.View.AllWeb"
             mc:Ignorable="d" 
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Height="800" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="720*"/>
        </Grid.RowDefinitions>

        <Grid VerticalAlignment="Center" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                <materialDesign:PackIcon Kind="ArrowLeft" Foreground="Gray" Height="30" Width="40" />
                <materialDesign:PackIcon Kind="ArrowRight" Foreground="Gray" Height="30" Width="40"  />
                <materialDesign:PackIcon Kind="Refresh" Foreground="Gray" Height="30" Width="40"  />
            </StackPanel>
            <TextBox Grid.Column="1" MinWidth="600" materialDesign:HintAssist.Hint="Enter Website Url"  >
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding EnterPage}" Key="Return" />
                </TextBox.InputBindings>
            </TextBox>
            <Button Grid.Column="2" Width="100" HorizontalAlignment="Right" Content="Search"/>
        </Grid>

        <Grid >
            
        </Grid>

    </Grid>
  
</UserControl>
